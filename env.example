# Luciq Master API - Environment Configuration Template
# Copy this file to .env and update with your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Security Configuration (CRITICAL - CHANGE THESE IN PRODUCTION)
SECRET_KEY=your-super-secret-key-change-immediately-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (Restrict in production)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DATABASE_URL=luciq_master.db

# Reddit API Configuration (Optional - for enhanced discovery)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=Luciq:discovery-engine:v3.0 (by /u/your_username)

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Development/Production Mode
ENVIRONMENT=development

# API Key Security (for MVP billing system)
MVP_API_KEY_SALT=your-unique-salt-for-api-key-generation

# Optional: External API Keys for enhanced capabilities
OPENAI_API_KEY=your_openai_api_key_for_enhanced_analysis
ANTHROPIC_API_KEY=your_anthropic_api_key_for_advanced_intelligence 